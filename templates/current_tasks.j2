  <div class="row">
	    	
	    	{% if task_details|length == 0 %}
	    			
	    			<div class="display-1"><i class="bi bi-card-checklist"></i> No Running Task!</div>

	    	{% else %}
	    	<table class="table table-striped table-hover mt-5" id="runningTasksTable">
			  <thead>
			    <tr>
			      <th scope="col">#</th>
			      <th scope="col">Application Name</th>
			      <th scope="col">Task Name</th>
			      <th scope="col">Dashboard Link</th>
			    </tr>
			  </thead>
			  <tbody>
	    	{% for job_details in task_details %}
			    <tr>
			      <th scope="row">{{loop.index}}</th>
			      <td>{{job_details["APPLICATION_NAME"]}}</td>
			      <td><div class="spinner-border text-info spinner-border-sm" role="status"><span class="sr-only"></span></div> {{job_details["TASK_NAME"]}}</td>
			      <td><a href="/{{job_details["APPLICATION_NAME"]}}/view/dashboard">view dashboard</a></td>
			    </tr>
	        {% endfor %}
	        </tbody>
			</table>
        </div>
        <script>
		 $(document).ready( function () {
    $('#runningTasksTable').DataTable();
} );
</script>
{% endif %}
</div>